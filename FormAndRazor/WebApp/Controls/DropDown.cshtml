@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "DropDown (select)";
    var pagechoice = Request.Form["pageselection"];
}
@section banner{
    <h1>DropDown (select)</h1>
}

@if(IsPost)
{
    switch(pagechoice.ToUpper())
    {
        case "TEXTBOXES":
            {
                //use relative addressing to access the page
                //use the .Redirect(page) method of the Response object
                Response.Redirect("TextBoxes.cshtml");
                break;
            }
        case "RADIOBUTTONS":
            {
                Response.Redirect("RadioButtons.cshtml");
                break;
            }
        case "CHECKBOXES":
            {
                Response.Redirect("CheckBoxes.cshtml");
                break;
            }
        default:
            {
                //not selecting a page in essence means that the prompt selection is the one chosen
                <p><span style="color:firebrick"><strong>Make A Selection from the List</strong></span></p>
                break;
            }

    }


}
else
{

}


<form id="theform" method="post">
    <div class="row">
        <div class="col-md-offset-4">
            <label for="pageselection">Select your sample:</label>
            &nbsp;&nbsp;
            <select id="pageselection" name="pageselection">
                <option value="">Select ...</option>
                <option value="Textboxes">Textboxes</option>
                <option value="Radiobuttons">Radiobuttons</option>
                <option value="Checkboxes">Checkboxes</option>
            </select>
            &nbsp;&nbsp;
            <button type="submit" id="formbutton" name="formbutton"
                    value="Submit" class="btn btn-primary">
                Go..
            </button>
        </div>

    </div>
</form>

